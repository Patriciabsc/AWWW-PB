<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('https://images.unsplash.com/photo-1484804959297-65e7c19d7c9f?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=ff4666b0a7478ed7b17344eb76fbfe3d&auto=format&fit=crop&w=714&q=80');">
  <div class="banner-content">
    <h1>Your next adventure through travelers' eyes</h1>
    <p>Real journeys in HD quality only</p>
    <%= link_to "Where to explore next?", countries_path, class: 'btn-rounded-green' %>
  </div>
</div>


<div class="content">
  <% @visuals.last(4).each do |visual| %>
    <div class="banner-small" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url('<%= visual.visual_url %>');">
      <div class="banner-content-square">
        <h3><%= visual.country.name %></h3>
        <div class="dash"></div>
        <p><%= visual.author.nil? ? "A discreet traveler" : visual.author.capitalize %></p>
      </div>
    </div>
  <% end %>

</div>
