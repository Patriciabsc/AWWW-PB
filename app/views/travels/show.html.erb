
<div class="banner-small" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url('<%= @travel.travel_pic_url %>');">
  <div class="banner-content">
    <h1> <%= @travel.name %></h1>
    <div class="dash-big"></div>
    <h3>By <%= @travel.author.nil? ? "a discreet traveler" : @travel.author.capitalize %> in <%= @travel.country.name %></h3>

  </div>
</div>

<div class="container">

  <div class="row">
    <div class="description-quick-facts">
      <div class="col-xs-12 col-md-7">
        <div class="description">
          <h2>Details of this exploration</h2>
          <p> <%= @travel.description %> </p>
        </div>
      </div>
      <div class="col-xs-12 col-md-5">
        <div class="quick-facts">
          <h2>Quick facts</h2>
          <div class="tags">
            <div class="tag">
              <%= image_tag "duration.png", class: "tag-avatar" %>
              <p><%= @travel.duration %></p>
            </div>
            <% if @travel.tags %>
              <% @travel.tags.split(", ").each do |tag| %>
                <div class="tag">
                <%= image_tag "#{tag}.png", class: "tag-avatar" %>
                  <p><%= tag %></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="row visuals-carousel">
    <h2>Experiences</h2>
    <!-- The visuals -->
    <%= render "travels/carousel", travel: @travel %>
</div>
